/* pages/item/index.wxss */
.item-wrap .slideview-wrap {
  margin: 10px;
}
.item-wrap .slideview {
  height: 55px;
  padding: 0 15px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 10px;
  border: solid 1px gray;
  background: white;
  margin-bottom: 10px;
}
.item-wrap .slideview .item-info {
  display: flex;
  align-items: center;
  font-size: 14px;
  gap: 10px;
}
.item-wrap .slideview .item-info .mark {
  font-size: 8px;
  padding: 0 3px;
  background: red;
  color: white;
  width: fit-content;
  margin-top: 2px;
}
.item-wrap .slideview .item-info .createdDate {
  font-size: 12px;
  color: #5a5a5a;
}
.item-wrap .slideview .graph {
  display: flex;
  flex-direction: row;
  gap: 12px;
}
.item-wrap .slideview .graph .icon {
  display: flex;
  align-items: center;
}
.item-wrap .slideview .graph .icon image {
  width: 24px;
  height: 24px;
}
.item-wrap .slideview.new {
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-wrap .slideview.new image {
  width: 40px;
  height: 40px;
  display: inline-block;
  margin-right: 5px;
}
