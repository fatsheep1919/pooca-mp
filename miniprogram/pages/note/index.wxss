/* pages/note/index.wxss */
.note-wrap {
  height: 100vh;
}
.note-wrap .container {
  padding: 15px 10px;
  display: flex;
  flex-direction: row;
}
.note-wrap .container .entry {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.note-wrap .container .entry image {
  width: 48px;
  height: 48px;
  padding: 4px;
  background: red;
  border-radius: 28px;
}
.note-wrap .container .entry text {
  font-size: 12px;
}
