/* components/itemIcon/index.wxss */
.item-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
}
.item-icon .image-wrap {
  border-radius: 50%;
  border: solid 1px #aaa;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-icon .image-wrap image {
  width: 100%;
  height: 100%;
}